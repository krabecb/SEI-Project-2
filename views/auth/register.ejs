<%- include('../partials/header.ejs') %>

  <div id="register">

    <h3>Sign up here</h3>

    <p><%= message %></p>

    <form method="POST" action="/auth/register">
      <fieldset>
        <legend>
          <small>
            Choose a username and password below
          </small>
        </legend>
        <div>
          <label for="username">Username:</label>
          <input 
            id="username" 
            type="text" 
            name="username" 
            placeholder="Choose a username" 
          />
        </div>
        <div>
          <label for="password">Password</label>
          <input 
            id="password"
            type="password" 
            name="password"
            placeholder="Choose a password"
          >
        </div>
         <div>
          <label for="firstname">First name:</label>
          <input 
            id="firstname" 
            type="text" 
            name="firstname" 
            placeholder="Enter your first name" 
          />
        </div>
        <div>
          <label for="lastname">Last name:</label>
          <input 
            id="lastname" 
            type="text" 
            name="lastname" 
            placeholder="Enter your last name" 
          />
        </div>
        <div>
          <label for="date">Date:</label>
          <input 
            id="date" 
            type="date" 
            name="date" 
            placeholder="i.e 1993-05-28" 
            min="1900-01-01" 
            max="2002-01-01" 
          />
        </div>
        <div>
          <label for="hometown">Hometown name:</label>
          <input 
            id="hometown" 
            type="text" 
            name="hometown" 
            placeholder="Enter the name of your hometown" 
          />
        </div>
        <div>
          <label for="email">Email:</label>
          <input 
            id="email" 
            type="text" 
            name="email" 
            placeholder="Enter your email address" 
          />
        </div>
        <button>Sign up!</button>
      </fieldset>
    </form>

</div>

<%- include('../partials/footer.ejs') %>