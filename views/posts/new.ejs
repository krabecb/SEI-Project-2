<%- include('../partials/headerNew.ejs') %>

  <div id="new-container">

    <div>
  	 <h3>Where'd You Go?🐝</h3>
    </div>

    <div>
    	<form method="POST" action="/posts">
        <fieldset>
          <legend>Enter details</legend>
          <div>
            <label for="title">Title:</label>
            <input type="text" name="title" id="title" placeholder="Enter title name" />
          </div>
          <div>
            <label for="city">City:</label>
            <input type="text" name="city" id="city" placeholder="Enter city name" />
          </div>
          <div>
            <label for="country">Country:</label>
            <input type="text" name="country" id="country" placeholder="Enter country name" />
          </div>
          <div>
            <label for="description">Description:</label>
            <input type="textarea" name="description" id="description" placeholder="Enter description" />
          </div>
          <div>
          	<label for="postPicture">Image:</label>
    		<input id="postPicture" type="text" name="postPicture" placeholder="Enter image URL">
          </div>
          <button>Post</button>
        </fieldset>
      </form>
    </div>

  </div>

